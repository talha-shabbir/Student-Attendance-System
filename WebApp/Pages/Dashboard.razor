@page "/dashboard"

<div class="container-fluid vh-100">
    <div class="row h-100">
        <!-- Sidebar -->
        <div class="col-md-2 d-flex flex-column bg-dark p-0 @SidebarClass" id="sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header d-flex align-items-center justify-content-start p-3 bg-primary">
                <img src="Images/SMS-Logo.png" alt="Logo" class="me-2" style="height: 40px;" />
                <span>Student Attendance System</span>
            </div>

            <!-- Sidebar Menu -->
            <div class="list-group list-group-flush flex-grow-1">
                <p class="mt-3 ms-3 fw-bold text-secondary">Menu</p>
                <a href="/dashboard" class="list-group-item px-4 py-3 mx-2 rounded-pill bg-primary text-light">
                    <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                </a>
                <a href="/attendance" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="fas fa-calendar-check me-2"></i>Teacher  Attendance
                </a>
                <a href="/TeacherDashboard" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="fas fa-user me-2"></i> Teacher Dashboard
                </a>
                <a href="/attendance-entry" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="fas fa-user me-2"></i>  /attendance-entry
                </a>
                <a href="/StudentDashboard" class="list-group-item list-group-item-action bg-dark text-light">
                    <i class="fas fa-calendar-alt me-2"></i> Student Dashboard
                </a>
               
            </div>

            <!-- Fixed Footer Links -->
            <div>
                <hr class="bg-secondary m-0" />
                <div class="list-group">
                    <a href="/settings" class="list-group-item list-group-item-action bg-dark text-light">
                        <i class="fas fa-cog me-2"></i> Settings
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-light">
                        <i class="fas fa-question-circle me-2"></i> Help & Support
                    </a>
                </div>
            </div>
        </div>
        <!-- Main Content -->
        <div class="col d-flex flex-column" id="main-content" style="margin-left: @SidebarMargin;">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm fixed-top" style="padding-left: @NavbarPadding; padding-bottom: 0;">
                <div class="container-fluid">
                    <!-- Sidebar Toggle Icon -->
                    <i class="fas fa-bars me-3" @onclick="ToggleSidebar"></i>

                    <!-- Navbar Title -->
                    <span class="navbar-brand ms-3 fw-bold">Dashboard</span>

                    <!-- Spacer to push elements to the right -->
                    <div class="ms-auto d-flex align-items-center">
                        <span class="text-dark me-3 fw-semibold">Admin</span>
                        <LoginDisplay />
                        <img src="Images/admin-avatar.png" alt="Admin Avatar" class="rounded-circle" style="height: 30px; width: 30px;" />
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <div class="container-fluid mt-2">
                <DashboardContent></DashboardContent>
            </div>
        </div>
    </div>
</div>



@code {
    private string SidebarClass { get; set; } = "sidebar-visible";

    private string SidebarMargin { get; set; } = "250px";

    private string NavbarPadding { get; set; } = "250px";



    private void ToggleSidebar()

    {

        if (SidebarClass == "sidebar-visible")

        {

            SidebarClass = "sidebar-hidden";

            SidebarMargin = "0px";

            NavbarPadding = "0px";

        }

        else

        {

            SidebarClass = "sidebar-visible";

            SidebarMargin = "250px";

            NavbarPadding = "250px";

        }

    }
}
